<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".ui.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/login_password_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_password_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/delete" />

        <TextView
            android:id="@+id/login_turn_phone"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="190dp"
            android:gravity="center"
            android:text="验证码登录"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_password_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/login_password_top"
        android:layout_marginTop="10dp"
        android:text="Password Login"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/login_password_title"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/entered_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="Please enter your mobile phone number"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorMoreLightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entered_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:background="@null"
                android:hint="Please enter password"
                android:inputType="textPassword" />

            <!--            <Button-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:textSize="12sp"-->
            <!--                android:layout_marginEnd="10dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:textColor="@color/colorGrey"-->
            <!--                android:background="@drawable/login_code_button"-->
            <!--                android:text="获取验证码" />-->
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorMoreLightGrey" />


        <Button
            android:id="@+id/agree_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_agree_button"
            android:text="Agree to the agreement and log in"
            android:textColor="@color/colorLightWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="An account will be automatically generated after logging in without a registered mobile phone number, and it means that you have read and agreed to it."
            android:textColor="@color/colorFontGrey"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《User Service Agreement》"
                android:textColor="@color/colorFreshBlue"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="、"
                android:textColor="@color/colorFontGrey"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《Privacy Policy》"
                android:textColor="@color/colorFreshBlue"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>